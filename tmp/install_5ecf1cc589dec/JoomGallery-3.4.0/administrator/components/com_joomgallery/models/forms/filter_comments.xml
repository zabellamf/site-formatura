<?xml version="1.0" encoding="utf-8"?>
<form>
  <fields name="filter">
    <field
      name="search"
      type="text"
      label="COM_JOOMGALLERY_COMMON_SEARCH"
      hint="COM_JOOMGALLERY_COMMON_SEARCH"
    />
    <field
      name="state"
      type="list"
      label="JOPTION_SELECT_PUBLISHED"
      onchange="this.form.submit();"
      >
      <option value="">JOPTION_SELECT_PUBLISHED</option>
      <option value="1">COM_JOOMGALLERY_COMMAN_OPTION_PUBLISHED_ONLY</option>
      <option value="2">COM_JOOMGALLERY_COMMAN_OPTION_NOT_PUBLISHED_ONLY</option>
      <option value="3">COM_JOOMGALLERY_COMMAN_OPTION_APPROVED_ONLY</option>
      <option value="4">COM_JOOMGALLERY_COMMAN_OPTION_NOT_APPROVED_ONLY</option>
    </field>
  </fields>  
  <fields name="list">
    <field
      name="fullordering"
      type="joomlist"
      label="JGLOBAL_SORT_BY"
      onchange="this.form.submit();"
      default="c.cmtdate DESC"
      >
      <option value="">JGLOBAL_SORT_BY</option>
      <option value="user ASC">COM_JOOMGALLERY_COMMON_AUTHOR, JGLOBAL_ORDER_ASCENDING</option>
      <option value="user DESC">COM_JOOMGALLERY_COMMON_AUTHOR, JGLOBAL_ORDER_DESCENDING</option>
      <option value="c.cmttext ASC">COM_JOOMGALLERY_COMMAN_TEXT, JGLOBAL_ORDER_ASCENDING</option>
      <option value="c.cmttext DESC">COM_JOOMGALLERY_COMMAN_TEXT, JGLOBAL_ORDER_DESCENDING</option>
      <option value="c.published ASC">COM_JOOMGALLERY_COMMON_PUBLISHED, JGLOBAL_ORDER_ASCENDING</option>
      <option value="c.published DESC">COM_JOOMGALLERY_COMMON_PUBLISHED, JGLOBAL_ORDER_DESCENDING</option>
      <option value="c.approved ASC">COM_JOOMGALLERY_COMMON_APPROVED, JGLOBAL_ORDER_ASCENDING</option>
      <option value="c.approved DESC">COM_JOOMGALLERY_COMMON_APPROVED, JGLOBAL_ORDER_DESCENDING</option>
      <option value="i.imgtitle ASC">COM_JOOMGALLERY_COMMON_IMAGE, JGLOBAL_ORDER_ASCENDING</option>
      <option value="i.imgtitle DESC">COM_JOOMGALLERY_COMMON_IMAGE, JGLOBAL_ORDER_DESCENDING</option>
      <option value="c.cmtip ASC">COM_JOOMGALLERY_COMMAN_IP, JGLOBAL_ORDER_ASCENDING</option>
      <option value="c.cmtip DESC">COM_JOOMGALLERY_COMMAN_IP, JGLOBAL_ORDER_DESCENDING</option>
      <option value="c.cmtdate ASC">COM_JOOMGALLERY_COMMON_DATE, JGLOBAL_ORDER_ASCENDING</option>
      <option value="c.cmtdate DESC">COM_JOOMGALLERY_COMMON_DATE, JGLOBAL_ORDER_DESCENDING</option>
      <option value="c.cmtid ASC">COM_JOOMGALLERY_COMMON_ID, JGLOBAL_ORDER_ASCENDING</option>
      <option value="c.cmtid DESC">COM_JOOMGALLERY_COMMON_ID, JGLOBAL_ORDER_DESCENDING</option>
    </field>
    <field
      name="limit"
      type="limitbox"
      class="input-mini"
      default="20"
      label="COM_JOOMGALLERY_COMMON_SEARCH_LIMIT"
      onchange="this.form.submit();"
    />
  </fields>
</form>